{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": [
      1,
      {
        "objects": "always",
        "arrays": "ignore",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "ignore"
      },
      "error",
      "never"
    ],
    "strict": "off",
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "always"
      }
    ],
    "class-methods-use-this": "off",
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "global-require": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  },
  "globals": {
    "use": true
  }
}
